{{#if isEditing}}
  {{partial 'post/edit'}}
  <button {{action 'doneEditing'}}>Done</button>
{{else}}
  <button {{action 'edit'}}>Edit</button>
{{/if}}

<h1>{{title}}</h1>
<h2>by {{author}} <small class='muted'>({{format-date date}})</small></h2>

<hr>

{{#if videoUrl}}
  <div class='video'>
    <iframe width="853" height="480" {{bind-attr src=deckedOutVideoUrl}} frameborder="0" allowfullscreen></iframe>
  </div>
{{/if}}
<div class='below-the-fold'>
  {{format-markdown body}}
</div>